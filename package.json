{
  "name": "ninjapay",
  "version": "2.0.0",
  "private": true,
  "description": "Confidential Payment Infrastructure for Solana - Powered by Arcium MPC",
  "author": "NinjaPay Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @ninjapay/database db:generate",
    "db:push": "pnpm --filter @ninjapay/database db:push",
    "db:migrate": "pnpm --filter @ninjapay/database db:migrate",
    "db:studio": "pnpm --filter @ninjapay/database db:studio",
    "dev:dashboard": "pnpm --filter unified-dashboard dev",
    "dev:api": "pnpm --filter api-gateway dev",
    "dev:arcium": "pnpm --filter arcium-service dev",
    "build:dashboard": "pnpm --filter unified-dashboard build",
    "build:api": "pnpm --filter api-gateway build",
    "build:programs": "pnpm --filter programs build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
