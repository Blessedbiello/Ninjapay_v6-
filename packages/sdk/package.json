{
  "name": "@ninjapay/sdk",
  "version": "2.0.0",
  "description": "NinjaPay API Client SDK for Node.js and Browser",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ninjapay/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "keywords": [
    "ninjapay",
    "solana",
    "payments",
    "confidential",
    "mpc",
    "arcium"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninjapay/sdk"
  }
}
