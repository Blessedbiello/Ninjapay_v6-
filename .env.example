# ===========================================
# NinjaPay v2 - Environment Configuration
# ===========================================

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/ninjapay?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# API Gateway
API_PORT=8001
API_HOST=http://localhost:8001
NODE_ENV=development
JWT_SECRET=your-jwt-secret-min-32-chars-long
CORS_ORIGIN=http://localhost:3000

# Arcium MPC Configuration (CLUSTER MODE)
MPC_MODE=cluster
ARCIUM_SERVICE_URL=http://localhost:8002
ARCIUM_CLUSTER_ADDRESS=https://mpc.arcium.network
ARCIUM_PROGRAM_ID=your-arcium-program-id
ARCIUM_CLUSTER_OFFSET=0
ARCIUM_CLUSTER_MAX_SIZE=64
ARCIUM_CLUSTER_CU_PRICE=1000

# Encryption (CRITICAL - Generate securely: openssl rand -hex 32)
ENCRYPTION_MASTER_KEY=your-64-char-hex-master-key-generate-with-openssl
ARCIUM_CALLBACK_SECRET=your-32-char-callback-secret

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_KEYPAIR_PATH=~/.config/solana/id.json

# Unified Dashboard
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
